<!DOCTYPE html>
<html>
<%- include("partials/head.ejs") %>
<body>
    <%- include("partials/header.ejs") %>
    <div class="trailDetail">
        <div class="info">
            <h2><%= trail.name %></h2>
            <h3><%= trail.location %> </h3>
            <p><%= trail.description %> </p>
        </div>
        <div class="map">
            <img src="<%= trail.map %>">
        </div>
        <div class="largeImg">
            <img src="<%=trail.image%>">
            <h5><%= trail.imageDescription %> </h5>
        </div>
        <div class="directions">
            <h3>TRAILHEAD</h3><p><%= trail.trailhead %> </p>
            <h4><%= trail.length %> </h4>
            <h4>Approximate hike time: <%= trail.time %></h4>
        </div>

    </div>
</body>
</html>