<!DOCTYPE html>
<html>
<%- include("partials/head.ejs") %>
<body>
    <%- include("partials/user_header.ejs") %>
    <div class="trailDetail">
        <div class="info">
            <h2><%= trail.name %></h2>
            <h3><%= trail.location %> </h3>
            <p><%= trail.description %> </p>
            <div id="actions">
                <a href="/user/hikes/<%=trail._id %>/edit"><button id="edit">EDIT DETAILS</button></a><br><br>
                <form action="/user/hikes/<%=trail._id; %>?_method=DELETE" method="POST">
                <button id="delete" type="submit" value="DELETE">DELETE TRAIL</button>
                </form>
            </div>
            <!-- <form action="/user/hikes/:id"  method="POST"><i class="fa-solid fa-heart-circle-plus"></i><input type="submit" value="Save Trail"></input></form> -->
            <!-- <a href="/user/dashboard/:id" ><button class="saveMe">Save Trail</button></a> -->
        </div>
        <div class="map">
            <img id="map" src="<%= trail.map %>">
        </div>
        <div class="largeImg">
            <img id="trailImg" src="<%=trail.image%>">
            <h5><%= trail.imageDescription %> </h5>
        </div>
        <div class="directions">
            <h3>TRAILHEAD</h3><p><%= trail.trailhead %> </p>
            <h4><%= trail.length %> </h4>
            <h4>Approximate hike time: <%= trail.time %></h4>
        </div>

    </div>

</body>
</html>