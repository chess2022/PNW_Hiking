<!DOCTYPE html>
<html>
<%- include("partials/head.ejs") %>
<body>
    <%- include("partials/user_header.ejs") %>

    <div class="trailDetail">
        <div class="info">
            <h2><%= trail.name %></h2>
            <h3><%= trail.location %> </h3>
            <p><%= trail.description %> </p>
            <i class="fa-solid fa-heart-circle-plus"></i> <input form="savedTrail" type="submit" value="Save Trail"></input>
        </div>
        <div class="map">
            <img id="map" src="<%= trail.map %>">
        </div>
        <div class="largeImg">
            <img id="trailImg" src="<%=trail.image%>">
            <h5><%= trail.imageDescription %> </h5>
        </div>
        <div class="directions">
            <h3>TRAILHEAD</h3><p><%= trail.trailhead %> </p>
            <h4><%= trail.length %> </h4>
            <h4>Approximate hike time: <%= trail.time %></h4>
        </div>

    </div>
    <form action="/user/hikes/:id"  method="POST" id="savedTrail">
       <input type="hidden" name="name" value="<%= trail.name %>"> 
       <input type="hidden" name="location" value="<%= trail.location %>">     
       <input type="hidden" name="description" value="<%= trail.description %>">     
       <input type="hidden" name="map" value="<%= trail.map %>">     
       <input type="hidden" name="image" value="<%= trail.image %>">     
       <input type="hidden" name="imageDescription" value="<%= trail.imageDescription %>">     
       <input type="hidden" name="trailhead" value="<%= trail.trailhead %>">     
       <input type="hidden" name="length" value="<%= trail.length %>">     
       <input type="hidden" name="time" value="<%= trail.time %>">     
    </form>
</body>
</html>